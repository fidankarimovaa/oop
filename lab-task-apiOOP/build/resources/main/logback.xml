<configuration>
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <Pattern>
                %d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%15.15t] %40.40c{40} : %msg%n
            </Pattern>
        </encoder>
    </appender>

    <logger name="az.ingress" level="INFO" additivity="false">      
<!--        info olaraq gonderende intelligde global exc cixmir amma trace yazanda cixir 500 erroru db ile bagli errorlar-->
        <appender-ref ref="CONSOLE"/>

    </logger>
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>

    </root>
</configuration>

